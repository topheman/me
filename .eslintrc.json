{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "react/no-unescaped-entities": [
      "error",
      {
        "forbid": [
          {
            "char": ">",
            "alternatives": [
              "&gt;"
            ]
          },
          {
            "char": "<",
            "alternatives": [
              "&lt;"
            ]
          },
          {
            "char": "}",
            "alternatives": [
              "&#125;"
            ]
          },
          {
            "char": "{",
            "alternatives": [
              "&#123;"
            ]
          }
        ]
      }
    ]
  }
}

